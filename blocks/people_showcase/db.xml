  <table name="btBasicTest">
	<field name="bID" type="I">
	  <key />
	  <unsigned />
	</field>
	<field name="content" type="X2">
	  <default value="" />
	</field>
  </table>

  <table name="btPersons">
	<field name="pID" type="I">
	  <key />
	  <unsigned />
	</field>
	<field name="name" type="C" size="255"/>
	<field name="intro" type="X" size="1000">
		<default value="Introductionary text"/>
	</field>
	<field name="image" type="C" size="255" />
	<field name="link" type="C" size="255"/>
  </table>
</schema>
